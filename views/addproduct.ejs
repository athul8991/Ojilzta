<%-include ('partials/adminHeader')%>
<div class="container">
  <form method="post" action="/addproduct">
  <div class="row">
    
    
      <div class="col-xl-6">
        <div class="form-group p-1">
          <label for="pName">Product Name</label>
          <input type="text"  name="pName" class="form-control" id="pname"  placeholder="Product name">
          <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
        </div>
        <div class="form-group p-1">
          <label for="pDes">Product description</label>
          <textarea class="form-control" name="pDes" id="pDes"  rows="3"></textarea>
        </div>
        
        <div class="form-group p-1">
          <label for="pPrice">Product Price</label>
          <input type="text"  name="pPrice" class="form-control" id="pPrice"  placeholder="Price">
        </div>
        </div>
        <div class="col-xl-6">
          <div class="form-group p-1">
            <div class="custom-file">
              <label for="pDes">Upload image</label>
              <input class="form-control" type="file" id="formFile">
            </div>
          </div>
          <div class="form-group p-1">
            <div class="image-view" id="image_view"></div>
          </div>

        </div>
        <div class="d-flex justify-content-center mb-3">
          <button type="submit" class="btn btn-primary w-1 mt-1">Add product</button>
        </div>
        </div>
        </div>
      </form>
     
      

</div>
<div class="foot">
<%-include('partials/footer')%>
</div>